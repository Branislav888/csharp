<Window x:Class="PokemonGame.Window_PokemonBattle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonGame"
        mc:Ignorable="d"
        Title="Window_PokemonBattle" Height="450" Width="800">
    <Grid>
        <ProgressBar Name="ProgressBar_Pokemon1_HP" HorizontalAlignment="Left" Height="23" Margin="54,78,0,0" VerticalAlignment="Top" Width="211" Background="Gainsboro"/>
        <Image Margin="54,122,454,122" Source="Pikachunew.png" Stretch="Fill"/>
        <Image Margin="504,73,79,146" Source="Charizardnew.png" Stretch="Fill"/>
        <Label Name="Label_Pokemon1_HP" Content="X/X" HorizontalContentAlignment="Left" Margin="54,31,535,0" VerticalAlignment="Top" FontSize="24" Width="211" RenderTransformOrigin="-0.301,0.562"/>
        <ProgressBar Name="ProgressBar_Pokemon2_HP" HorizontalAlignment="Left" Height="26" Margin="504,47,0,0" VerticalAlignment="Top" Width="236"/>
        <Label Name="Label_Pokemon2_HP" Content="X/X"  HorizontalAlignment="Left" Margin="504,-1,0,0" VerticalAlignment="Top" Height="43" Width="58" FontSize="24"/>
        <Button Content="Ligh Attack" HorizontalAlignment="Left" Margin="54,368,0,0" VerticalAlignment="Top" Height="41" Width="82" Background="#FF8BE859" Click="Button_Click"/>
        <Button Content="Medium Attack" HorizontalAlignment="Left" Margin="160,368,0,0" VerticalAlignment="Top" Height="40" Width="68" RenderTransformOrigin="-0.275,0.451" Background="#FFEAA764" Click="Button_Click_1"/>
        <Button Content="Hard Attack" HorizontalAlignment="Left" Margin="260,368,0,0" VerticalAlignment="Top" Height="40" Width="68" Background="#FFE24444" Click="Button_Click_2"/>

    </Grid>
</Window>
