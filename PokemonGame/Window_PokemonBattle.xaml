<Window x:Class="PokemonGame.Window_PokemonBattle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonGame"
        mc:Ignorable="d"
        Title="Window_PokemonBattle" Height="450" Width="800">
    <Grid>
        <Image Source="/Images/pikemon go mapa battle.png" Stretch="Fill"/>
        <ProgressBar Name="ProgressBar_Pokemon1_HP" HorizontalAlignment="Left" Height="42" Margin="34,128,0,0" VerticalAlignment="Top" Width="257" Background="Gainsboro"/>
        <Image Margin="0,217,421,-19" Source="Pikachunew.png" Stretch="Fill"/>
        <Image Margin="515,121,110,136" Source="Charizardnew.png" Stretch="Fill"/>
        <Label Name="Label_Pokemon1_HP" Content="X/X" HorizontalContentAlignment="Left" Margin="118,128,509,0" VerticalAlignment="Top" FontSize="24" RenderTransformOrigin="-0.301,0.562"/>
        <ProgressBar Name="ProgressBar_Pokemon2_HP" HorizontalAlignment="Left" Height="41" Margin="504,75,0,0" VerticalAlignment="Top" Width="236"/>
        <Label Name="Label_Pokemon2_HP" Content="X/X"  HorizontalAlignment="Left" Margin="597,74,0,0" VerticalAlignment="Top" Height="43" Width="193" FontSize="24"/>
        <Button Name="Button_LA" Content="Ligh Attack" HorizontalAlignment="Left" Margin="209,75,0,0" VerticalAlignment="Top" Height="41" Width="82" Background="#FF8BE859" Click="Button_Click"/>
        <Button Name="Button_MA" Content="Medium Attack" HorizontalAlignment="Left" Margin="128,75,0,0" VerticalAlignment="Top" Height="41" Width="68" RenderTransformOrigin="-0.275,0.451" Background="#FFEAA764" Click="Button_Click_1"/>
        <Button Name="Button_HA" Content="Hard Attack" HorizontalAlignment="Left" Margin="34,76,0,0" VerticalAlignment="Top" Height="40" Width="82" Background="#FFE24444" Click="Button_Click_2"/>
        <Button Name="Button_Heal" Content="Heal" HorizontalAlignment="Left" Margin="34,24,0,0" VerticalAlignment="Top" Height="40" Width="257" Background="#FF79AAE2" BorderBrush="White" Foreground="#FFFF0C0C" Click="Button_Click_3"/>
        <ListView x:Name="ListView_FightLogger" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="515,305,42,23">
            <ListView.View>
                <GridView>
                    <GridViewColumn />
                </GridView>
            </ListView.View>
        </ListView>


    </Grid>
</Window>
